<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.test.myportfolio.util.UtilKt"/>

        <variable
            name="encyclopedia"
            type="com.test.myportfolio.ui.main.encyclopedia.EncyclopediaViewModel" />

        <variable
            name="itemEncyclopedia"
            type="com.test.myportfolio.data.model.EncyclopediaModel.RS.Items" />

        <variable
            name="encyclopediaItemListener"
            type="com.test.myportfolio.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> encyclopediaItemListener.onItemClick(itemEncyclopedia, v)}"
            android:visibility="@{itemEncyclopedia.viewType == 0 ? View.VISIBLE : View.GONE}">

            <ImageView
                android:id="@+id/img_profile"
                setImages="@{itemEncyclopedia.thumbnail}"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{UtilKt.titleConvert(itemEncyclopedia.title,`네이버`)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_profile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:text="@{UtilKt.contentConvert(itemEncyclopedia.description,`네이버`)}"
                app:layout_constraintBottom_toBottomOf="@id/img_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_profile"
                app:layout_constraintTop_toBottomOf="@id/txt_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#f3f3f3"
                app:layout_constraintTop_toBottomOf="@id/img_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{itemEncyclopedia.viewType == 1 ? View.VISIBLE : View.GONE}">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_encyclopedia"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_margin="10dp"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="21dp"
                app:layout_constraintEnd_toStartOf="@id/btn_serch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#cccccc"
                app:strokeWidth="1dp">

                <EditText
                    android:id="@+id/et_encyclopedia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:maxLength="30"
                    android:paddingStart="23dp"
                    android:paddingEnd="36dp"
                    android:singleLine="true"
                    android:text="@={encyclopedia.searchEncyclopedia}"
                    android:textColor="#232323"
                    android:textSize="18sp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:onClick="@{()->encyclopedia.textClear()}"
                android:tag="textview"
                android:text="X"
                android:textColor="#cccccc"
                android:textSize="14sp"
                android:translationZ="1dp"
                android:visibility="@{encyclopedia.searchEncyclopedia.toString().length() > 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/mcv_encyclopedia"
                app:layout_constraintEnd_toEndOf="@id/mcv_encyclopedia"
                app:layout_constraintTop_toTopOf="@id/mcv_encyclopedia" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_serch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="@{()->encyclopedia.searchBtn()}"
                android:tag="button"
                android:enabled="@{encyclopedia.searchEncyclopedia.length() > 0 ? true : false}"
                android:text="검색"
                android:textSize="15sp"
                app:cornerRadius="21dp"
                app:layout_constraintBottom_toBottomOf="@id/mcv_encyclopedia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/mcv_encyclopedia" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#f3f3f3"
                app:layout_constraintTop_toBottomOf="@+id/mcv_encyclopedia" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>