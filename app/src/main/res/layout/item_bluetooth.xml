<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemBluetooth"
            type="com.test.myportfolio.data.model.BluetoothModel" />

        <variable
            name="bluetoothItemListener"
            type="com.test.myportfolio.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#cccccc"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <include
                    android:id="@+id/txt_mac"
                    layout="@layout/view_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:contents="@{itemBluetooth.mac}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="@{`MacAdress`}" />

                <include
                    android:id="@+id/txt_time"
                    layout="@layout/view_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:contents="@{itemBluetooth.time}"
                    app:layout_constraintTop_toBottomOf="@id/txt_mac"
                    app:title="@{`Time`}" />

                <include
                    android:id="@+id/txt_latitude"
                    layout="@layout/view_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:contents="@{itemBluetooth.latitude}"
                    app:layout_constraintTop_toBottomOf="@id/txt_time"
                    app:title="@{`Latitude`}" />

                <include
                    android:id="@+id/txt_longitude"
                    layout="@layout/view_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:contents="@{itemBluetooth.longitude}"
                    app:layout_constraintTop_toBottomOf="@id/txt_latitude"
                    app:title="@{`Longitude`}" />

                <include
                    android:id="@+id/txt_rssi"
                    layout="@layout/view_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:contents="@{itemBluetooth.rssi}"
                    app:layout_constraintTop_toBottomOf="@id/txt_longitude"
                    app:title="@{`Rssi`}" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    android:text="Msg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/txt_rssi" />

                <TextView
                    android:id="@+id/tv_contents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:includeFontPadding="false"
                    android:text="@{itemBluetooth.msg}"
                    app:layout_constraintStart_toEndOf="@id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/tv_title"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
