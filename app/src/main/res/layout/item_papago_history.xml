<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemPapagoHistory"
            type="com.test.myportfolio.data.model.PapagoHistoryModel" />

        <variable
            name="papagoHistoryItemListener"
            type="com.test.myportfolio.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> papagoHistoryItemListener.onItemClick(itemPapagoHistory, v)}"
        android:minHeight="50dp">


            <TextView
                android:id="@+id/txt_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@{itemPapagoHistory.key}"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="@{itemPapagoHistory.value}"
                android:textColor="#9C9C9C"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/txt_key" />

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3" />

    </LinearLayout>

</layout>